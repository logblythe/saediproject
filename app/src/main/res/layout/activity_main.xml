<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    tools:context="com.example.queen.saediproject.MainActivity">

    <include
        android:id="@+id/register_toolbar"
        layout="@layout/app_bar_layout" />

    <TextView
        android:id="@+id/createAccount"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="66dp"
        android:ems="10"
        android:inputType="none"
        android:text="CREATE AN ACCOUNT"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:layout_below="@+id/createAccount"
        android:id="@+id/text_firstName"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First Name"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editTex_firstName"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:background="@drawable/rounded_edit_text"
        android:hint="      Antodo@gmail.com"
        android:inputType="none"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/text_firstName"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_below="@id/editTex_firstName"
        android:id="@+id/text_lastName"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Name"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editText_lastName"
        android:background="@drawable/rounded_edit_text"
        android:layout_width="match_parent"
        android:textSize="15dp"
        android:hint="      Type your password"
        android:layout_height="35dp"
        android:layout_below="@+id/text_lastName"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <TextView
        android:layout_below="@id/editText_lastName"
        android:id="@+id/text_phone_no"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phone Number"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editText_phoneNo"
        android:background="@drawable/rounded_edit_text"
        android:layout_width="match_parent"
        android:hint="      Repeat your password"
        android:textSize="15dp"
        android:layout_height="35dp"
        android:layout_below="@+id/text_phone_no"
        android:layout_alignParentStart="true"
        android:layout_marginTop="23dp" />

    <TextView
        android:layout_below="@id/editText_phoneNo"
        android:id="@+id/text_Address"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editText_address"
        android:background="@drawable/rounded_edit_text"
        android:layout_width="match_parent"
        android:hint="      Phone Number and Name"
        android:layout_height="35dp"
        android:textSize="15dp"
        android:layout_below="@+id/text_Address"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <EditText
        android:id="@+id/editText_city"
        android:background="@drawable/rounded_edit_text"
        android:layout_width="match_parent"
        android:hint="      City and Country"
        android:textSize="15dp"
        android:layout_height="35dp"
        android:layout_below="@+id/editText_address"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I Agree To The Terms And Conditions"
        android:textColor="#333"
        android:layout_marginStart="14dp"
        android:layout_below="@+id/editText_city"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_below="@+id/checkBox"
        android:id="@+id/btn_createProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/my_button"
        android:text="Create Profile"
        android:textColor="#fff"
        android:layout_alignParentBottom="true" />


</RelativeLayout>
</ScrollView>